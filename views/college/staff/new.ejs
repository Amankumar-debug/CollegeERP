<% layout ("/layouts/boilerplate.ejs") %>


<div class="row">
  <h3>Add New Staff</h3>
  <div class="col-12 offset-1 mt-3">
    <form novalidate class="needs-validation" method="post" action="/staff/add" enctype="multipart/form-data">

      <div class="row g-3 align-items-start mb-3">
        <div class="col-md-7">
          <!-- Registration No -->
          <div class="row align-items-center mb-3">
            <div class="col-2">
              <label for="Department" class="col-form-label">Department:</label>
            </div>
            <div class="col-9">
              <input type="text" name="staff[department]" id="Department" class="form-control" placeholder="ex-BCA" required>
            </div>
          </div>

          <!-- Name -->
          <div class="row align-items-center mb-3">
            <div class="col-2">
              <label for="name" class="col-form-label">Name:</label>
            </div>
            <div class="col-9">
              <input type="text" name="staff[name]" id="name" class="form-control" placeholder="ex-Ajay Kumar" required>
            </div>
          </div>

          <!-- Father's Name -->
          <div class="row align-items-center mb-3">
            <div class="col-2">
              <label for="fa-name" class="col-form-label">Father's Name:</label>
            </div>
            <div class="col-9">
              <input type="text" name="staff[father_name]" id="fa-name" class="form-control" placeholder="ex-Anil Kumar" required>
            </div>
          </div>
        </div>

        <!-- ðŸ“¸ Photo Upload Section (3-row height) -->
        <div class="col-md-4 text-center photo-box">
          <label for="photo" class="form-label fw-bold">Upload Photo:</label>
          <input type="file" name="staff[image]" id="photo" class="form-control mb-2"  >
          <img id="preview" src="https://hancockogundiyapartners.com/wp-content/uploads/2019/07/dummy-profile-pic-300x300.jpg" alt="Photo Preview" class="img-thumbnail mt-2" style="max-width: 150px; height: 70px;">
        </div>
      </div>


      <!-- Course -->
      <div class="row align-items-center mb-3">
        <div class="col-1">
          <label for="phone" class="col-form-label">Phone No:</label>
        </div>
        <div class="col-9">
          <input type="text" name="staff[phone_no]" id="phone" class="form-control" placeholder="ex-9845****67" required>
        </div>
      </div>

      <!-- salary -->
      <div class="row g-3 align-items-center mb-3">
        <div class="col-1">
          <label for="salary" class="col-form-label">Salary:</label>
        </div>
        <div class="col-9">
          <input type="number" name="staff[salary]" id="salary" class="form-control" placeholder="ex-40000" required>
        </div>
      </div>

      <!-- E-mail -->
      <div class="row g-3 align-items-center mb-3">
        <div class="col-1">
          <label for="e-mail" class="col-form-label">E-mail:</label>
        </div>
        <div class="col-9">
          <input type="email" name="staff[email]" id="e-mail" class="form-control" placeholder="ex-ajay@gmail.com" required>
        </div>
      </div>

      
      <div class="row align-items-center mb-3">
        <div class="col-1">
          <label for="address" class="col-form-label">Address:</label>
        </div>
        <div class="col-9">
          <input type="text" name="staff[address]" id="address" class="form-control" placeholder="ex-Boner,Aligarh" required>
        </div>
      </div>

      <!-- Submit -->
       <div class="row">
      <div class="col-md-6">
        <button class="btn btn-success">Submit</button>
      </div>
      </div>
    </form>
    <div class="col-md-1 mt-4"  >
        <a href="/staff/add">
        <button class="btn btn-secondary" >Cancel</button>
        </a>
      </div>
  </div>
</div>
